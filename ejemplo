public class Matrizclase {
    public static void main(String[] args) throws Exception {

String [][] clase = new String[6][3];
String [][] clase2 = { //corchete azul marca todo el array o mi matriz
{"alumno1","alumno2","alumno3"},//las filas son las veces que se repite
{"alumno4","alumno5","alumno6"},
{"alumno7","alumno8","alumno9"},//las columnas estan dentro de las filas y las separamos por comas
{"alumno10","alumno11","alumno12"},
{"alumno13","alumno14","alumno15"},
{"alumno16","alumno17","alumno18"}
}; // acaba el array o mi matriz
System.out.println("la posicion del alumno es" + clase);
}


    }
    public static String ganadorSorteo(String[][]clase){
        Random rd = new Random();
    //calcular aleatorio para fila
        int fila, columna;
        fila = rd.nextInt(clase.length);
    //calcular aleatorio para columna
        columna = rd.nextInt(clase[0].length);
    //con la fila y columna devolver el string
        return clase [fila][columna];

}
